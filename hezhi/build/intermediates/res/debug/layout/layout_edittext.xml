<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/text_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edittext2"
        android:maxLength="100"
        android:minHeight="@dimen/bottom_bar"
        android:textColor="@color/text_main"
        android:textCursorDrawable="@drawable/shape_editext_cursor"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/color_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/white_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/selector_check"
                android:checked="true"
                android:text="白色"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />

            <RadioButton
                android:id="@+id/black_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/selector_check"
                android:text="黑色"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/Program%20Files/workspaece1/0HEZHI/res/layout/layout_edittext.xml -->