<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/my_info_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/selector_btn_submit_nocorner"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/header_iv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="@dimen/margin"
            android:scaleType="fitXY"
            android:src="@drawable/icon_def_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/phone_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/selector_btn_submit_nocorner"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:drawableRight="@drawable/icon_arrow_right_white"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <include layout="@layout/view_line_horizontal" />

    <LinearLayout
        android:id="@+id/mywallet_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/icon_wallet" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="2"
                android:text="钱包"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@drawable/icon_arrow_right"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/linecolor"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/talor_order_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/icon_custom_order" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="2"
                android:text="订单"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@drawable/icon_arrow_right"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/linecolor"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_talor_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/icon_my_talor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="2"
                android:text="@string/customiation"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@drawable/icon_arrow_right"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/linecolor"
            android:visibility="invisible" />
    </LinearLayout>

     <LinearLayout
        android:id="@+id/my_attention_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/icon_my_attention" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/my_attention_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="@string/my_attention"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@drawable/icon_arrow_right"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/linecolor"
            android:visibility="invisible" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/my_colletion_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/icon_my_collection" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/my_colletion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="收藏"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@drawable/icon_arrow_right"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/linecolor"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/invite_friend_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/icon_invite_friend" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="2"
                android:text="邀请好友"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@drawable/icon_arrow_right"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/linecolor"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/icon_setting" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="2"
                android:text="设置"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@drawable/icon_arrow_right"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/linecolor"
            android:visibility="invisible" />
    </LinearLayout>

