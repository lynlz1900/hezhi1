<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customization_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/bg_gray"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/customization_ly01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/customization_ry01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_submit_line3"
                android:padding="0px" >

                <ImageView
                    android:id="@+id/customization_image01"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_custom"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/bg_loading" />

                <ImageView
                    android:id="@+id/customization_delete01"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignBottom="@+id/customization_image01"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin1"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_delete_red" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/customization_name01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/customization_price01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin4"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_size_bigger" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customization_ly02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/customization_ry02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_submit_line3"
                android:padding="0px" >

                <ImageView
                    android:id="@+id/customization_image02"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_custom"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/bg_loading" />

                <ImageView
                    android:id="@+id/customization_delete02"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignBottom="@+id/customization_image02"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin1"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_delete_red" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/customization_name02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:singleLine="true"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/customization_price02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin4"
                    android:singleLine="true"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_size_bigger" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/Program%20Files/workspaece1/0HEZHI/res/layout/item_list_my_customization.xml -->