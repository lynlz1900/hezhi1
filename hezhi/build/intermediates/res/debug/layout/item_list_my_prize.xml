<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
       xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin"
    >

    <LinearLayout
         android:id="@+id/layout_prize"
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_whitetogray_nocorner" 
    android:orientation="vertical" 
    android:padding="@dimen/margin"
    >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            >
         <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_tutor2"
            android:textSize="@dimen/text_size_normal"
            android:singleLine="true"
            android:text="@string/prize_name"
             />
         <TextView
            android:id="@+id/text_prize_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_tutor2"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginLeft="0dp"
             />
         </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >
         <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_tutor2"
            android:textSize="@dimen/text_size_normal"
            android:singleLine="true"
            android:text="@string/prize_price"
             />
         <TextView
            android:id="@+id/text_prize_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_tutor2"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginLeft="0dp"
             />
         </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >
         <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_tutor2"
            android:textSize="@dimen/text_size_normal"
            android:singleLine="true"
            android:text="@string/prize_time"
             />
         <TextView
            android:id="@+id/text_prize_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_tutor2"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginLeft="0dp"
             />
         </LinearLayout>
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >
         <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_tutor2"
            android:textSize="@dimen/text_size_normal"
            android:singleLine="true"
            android:text="@string/prize_status"
             />
         <TextView
            android:id="@+id/text_prize_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginLeft="0dp"
             />
         </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
         android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
        >
        <ImageView 
            android:id="@+id/image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/margin"
            />
        <TextView
                android:id="@+id/text_prize_get"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/selector_btn_submit"
                android:gravity="center"
                android:text="@string/prize_getnow"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                 />
    </LinearLayout>
</RelativeLayout><!-- From: file:/E:/Program%20Files/workspaece1/0HEZHI/res/layout/item_list_my_prize.xml -->