<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin1"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:text="当前位置"
        android:textColor="@color/text_tutor"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:id="@+id/location_address_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/area_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="2"
                android:text="中国"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />

            <ProgressBar
                android:id="@+id/loading_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin"
                android:indeterminateDrawable="@drawable/shape_ring_progress"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin1"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:text="全部位置"
        android:textColor="@color/text_tutor"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:id="@+id/all_address_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_list_heiht"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/select_area_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="2"
                android:text="中国"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:drawablePadding="@dimen/margin"
                android:text="已选地区"
                android:textColor="@color/text_tutor"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/Program%20Files/workspaece1/0HEZHI/res/layout/activity_setting_address.xml -->