<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
       xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customization_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray" 
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin"
    >

    <LinearLayout
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray" 
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin"
        >
        <TextView
            android:id="@+id/customization_name_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_normal"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/layout_right"
             android:layout_centerVertical="true"
             />
        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentRight="true"
             android:gravity="center_vertical"
             android:layout_centerVertical="true"
            >
         <TextView
            android:id="@+id/customization_name_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_small"
             />
         <ImageView 
             android:id="@+id/imageview_customization_delete"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_delete"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/margin1"
             />
         </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_customization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:padding="@dimen/margin"
        android:gravity="center_vertical"
        >
    
        <LinearLayout 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0px"
            android:background="@drawable/selector_btn_submit_line3"
            android:gravity="center"
            >
        <ImageView 
             android:id="@+id/imageview_customization_logo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/bg_loading"
            android:contentDescription="@string/app_name"
            android:background="@drawable/bg_custom"
             android:scaleType="centerInside" 
             />
        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin2"
            >
         <TextView
            android:id="@+id/customization_name_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_normal"
            android:singleLine="true"
             />
         <TextView
            android:id="@+id/customization_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_tutor"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginTop="7dp"
             />
         </LinearLayout>
   </LinearLayout>
       
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin"
        >
        <TextView
            android:id="@+id/customization_price_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_normal"
            android:singleLine="true"
             />
        </RelativeLayout>
        
     <include layout="@layout/view_line_horizontal" />
     
     <RelativeLayout 
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@color/white"
        android:padding="@dimen/margin">
        
        <TextView 
            android:id="@+id/btn_customiation_right01"
            android:layout_width="76dp"
        android:layout_height="30dp"
         android:background="@drawable/selector_btn_submit_line"
         android:text="@string/order_buy_complete"
         android:textColor="@drawable/selector_text_font_basetowhite"
         android:textSize="@dimen/text_size_normal"
         android:layout_alignParentRight="true"
         android:gravity="center"
            />
        
        <TextView 
            android:id="@+id/btn_customiation_right02"
            android:layout_width="76dp"
        android:layout_height="30dp"
         android:background="@drawable/selector_btn_submit_line2"
         android:text="@string/order_logistics_view"
         android:textColor="@color/text_tutor2"
         android:textSize="@dimen/text_size_normal"
         android:layout_toLeftOf="@+id/btn_customiation_right01"
         android:layout_marginRight="@dimen/margin"
          android:gravity="center"
            />
        <TextView 
            android:id="@+id/btn_customiation_right03"
            android:layout_width="76dp"
        android:layout_height="30dp"
         android:background="@drawable/selector_btn_submit_line2"
         android:text="@string/order_buy_again"
         android:textColor="@color/text_tutor2"
         android:textSize="@dimen/text_size_normal"
         android:layout_toLeftOf="@+id/btn_customiation_right02"
         android:layout_marginRight="@dimen/margin"
          android:gravity="center"
            />
    </RelativeLayout>
    </LinearLayout>
    
    <ImageView
            android:id="@+id/redbag_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_redbag" 
            android:layout_gravity="bottom|right"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/app_name"
            />
</FrameLayout><!-- From: file:/E:/Program%20Files/workspaece1/0HEZHI/res/layout/item_list_my_customizationorder.xml -->