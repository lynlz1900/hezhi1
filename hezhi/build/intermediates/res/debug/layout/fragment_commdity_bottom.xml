<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/buy_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_submit_nocorner"
        android:gravity="center"
        android:text="@string/buy_direct"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_bigger" />

    <TextView
        android:id="@+id/custom_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_shape_red_noconner"
        android:gravity="center"
        android:text="@string/go_custom"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_bigger" />

     <TextView
        android:id="@+id/infoupload_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_submit_nocorner"
        android:gravity="center"
        android:text="@string/info_upload"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_bigger" />
