            <RadioButton
                android:id="@+id/find_rb"
                style="@style/RadioButton2"
                android:drawableTop="@drawable/selector_pic_find"
                android:text="@string/recieve" />

            <RadioButton
                android:id="@+id/person_rb"
                style="@style/RadioButton2"
                android:drawableTop="@drawable/selector_pic_me"
                android:text="@string/me" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
