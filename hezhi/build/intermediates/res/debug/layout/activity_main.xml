            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.wukong.hezhi.ui.view.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_rl" >
    </com.wukong.hezhi.ui.view.NoScrollViewPager>

