<?xml version="1.0" encoding="utf-8"?>
<!-- 普通编辑器状态变化 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><layer-list>
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/base" />
                </shape></item>
            <item android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape android:shape="rectangle">
                    <solid android:color="@color/bg_gray" />
                </shape></item>
        </layer-list></item>
    <item><layer-list>
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/linecolor" />
                </shape></item>
            <item android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape android:shape="rectangle">
                    <solid android:color="@color/bg_gray" />
                </shape></item>
        </layer-list></item>

</selector>