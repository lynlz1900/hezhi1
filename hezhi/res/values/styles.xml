    <!-- Edittext样式 -->
    <style name="reddotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_dot_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <!-- 下划线样式 -->
    <style name="UnderlineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/v_list_heiht</item>
        <item name="android:background">@drawable/selector_edittext</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>
    <!-- 显示在点击控件下方的PopupWindow中心的动画 -->
    <style name="popwindow_anim_top_center_style">
        <item name="android:windowEnterAnimation">@anim/scale_in_top_center</item>
        <item name="android:windowExitAnimation">@anim/scale_out_top_center</item>
    </style>

    <!-- 显示在点击控件下方的PopupWindow的动画 -->
    <style name="popwindow_anim_top_right_style">
        <item name="android:windowEnterAnimation">@anim/scale_in_top_right</item>
        <item name="android:windowExitAnimation">@anim/scale_out_top_right</item>
    </style>

    <!-- 显示在点击控件下方的PopupWindow的左边动画 -->
    <style name="popwindow_anim_top_left_style">
        <item name="android:windowEnterAnimation">@anim/scale_in_top_left</item>
        <item name="android:windowExitAnimation">@anim/scale_out_top_left</item>
    </style>
    <!-- 显示在点击控件上方方的PopupWindow中心的动画 -->
    <style name="popwindow_anim_buttom_center_style">
        <item name="android:windowEnterAnimation">@anim/scale_in_buttom_center</item>
        <item name="android:windowExitAnimation">@anim/scale_out_buttom_center</item>
    </style>
    <!-- 显示在点击控件上方方的PopupWindow左边的动画 -->
    <style name="popwindow_anim_buttom_left_style">
        <item name="android:windowEnterAnimation">@anim/scale_in_buttom_left</item>
        <item name="android:windowExitAnimation">@anim/scale_out_buttom_left</item>
    </style>
    <!-- 显示在点击控件上方方的PopupWindow的动画 -->
    <style name="popwindow_anim_buttom_right_style">
        <item name="android:windowEnterAnimation">@anim/scale_in_buttom_right</item>
        <item name="android:windowExitAnimation">@anim/scale_out_buttom_right</item>
    </style>
    <!-- 弹框dialog样式 -->
    <style name="CustomeDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 广告dialog样式 -->
    <style name="AdDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- popwidnow从底部显示消失动画 -->
    <style name="popwindow_anim_buttomfromparent_style">
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/timepicker_anim_exit_bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!-- popwidnow从底部显示消失动画 -->
    <style name="ActivityAnim">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="StyledIndicators" parent="@style/AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/selector_viewpager_instruct</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">14dp</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

    <style name="UnityTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 主题不透明 ,解决videoview透明的bug -->
    <style name="StyledIndicator1" parent="@style/AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/noAnimation</item>
    </style>

    <style name="noAnimation" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/selector_viewpager_instruct</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">14dp</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
        <style name="ImagePickerTheme" parent="AppBaseTheme">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ImagePickerThemeFullScreen" parent="ImagePickerTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!--SuperCheckbox的样式-->
    <style name="SuperCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_item_checked</item>
    </style>

    <style name="popupwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>
