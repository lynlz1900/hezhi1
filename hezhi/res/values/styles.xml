<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/ActivityWindowAnimTheme1</item>
    </style>

    <!-- 主题动画样式1(继承透明页面) -->
    <style name="ActivityWindowAnimTheme1" parent="@android:style/Animation.Translucent">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- 主题动画样式 -->
    <style name="ActivityWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/scale_out_center</item>
        <item name="android:activityCloseEnterAnimation">@anim/scale_in_center</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="RadioButton" parent="CommonTextStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_gray_to_red</item>
        <item name="android:background">@drawable/selector_viewpager_instruct</item>
    </style>

    <style name="RadioButton2" parent="RadioButton">
        <item name="android:background">@drawable/selector_viewpager_instruct2</item>
        <item name="android:textSize">10dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="CommonTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="submiButtonStyle">
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:background">@drawable/selector_btn_submit</item>
    </style>
    <!-- 线性按钮 -->
    <style name="submiLineButtonStyle">
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:textColor">@drawable/selector_text_font_basetowhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:background">@drawable/selector_btn_submit_line</item>
    </style>

    <!-- Viewpager头部引导的样式左边 -->
    <style name="ViewpagerInstructStyleLeft">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@drawable/selector_text_font_redtowhite</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:background">@drawable/selector_viewpager_instruct_left</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- Viewpager头部引导的样式右边 -->
    <style name="ViewpagerInstructStyleRight" parent="ViewpagerInstructStyleLeft">
        <item name="android:background">@drawable/selector_viewpager_instruct_right</item>
    </style>

    <!-- Viewpager头部引导的样式中间 -->
    <style name="ViewpagerInstructStyleCenter" parent="ViewpagerInstructStyleLeft">
        <item name="android:background">@drawable/selector_viewpager_instruct_center</item>
    </style>

    <style name="Blue_CheckBoxStyle">
        <item name="android:layout_height">@dimen/bottom_bar</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@drawable/selector_text_font_redtowhite</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:background">@drawable/selector_checkbox_blue</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <!-- Edittext样式 -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/v_list_heiht</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/shape_editext_cursor</item>
    </style>
