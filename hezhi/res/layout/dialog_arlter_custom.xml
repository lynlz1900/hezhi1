<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:clickable="true"
    android:padding="@dimen/margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
     	android:minHeight="@dimen/title_bar"
        android:text="标题"
        android:textColor="@color/text_main"
        android:textSize="@dimen/text_size_bigger"
        android:textStyle="bold" />

    <FrameLayout
        android:minHeight="@dimen/bottom_bar"
        android:id="@+id/content_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:focusable="true"
        android:focusableInTouchMode="true"
         >
    </FrameLayout>

	
    <RelativeLayout
                android:id="@+id/bt_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dialog_center_button"
            android:text="@string/cancel"
                                android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/margin4"
            android:paddingBottom="@dimen/margin4"
            android:textColor="@color/base"
            android:textSize="@dimen/text_size_normal" />

        <TextView
                  android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/margin4"
            android:paddingBottom="@dimen/margin4"
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dialog_center_button"
            android:text="@string/sure"
            android:textColor="@color/base"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>