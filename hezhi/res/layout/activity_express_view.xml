<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
     >

    <RelativeLayout 
        android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
             android:background="@color/white" 
              android:padding="@dimen/margin"
            >
            
        <ImageView 
            android:id="@+id/image_express_logo"
             android:layout_width="48dp"
            android:layout_height="48dp" 
            android:src="@drawable/icon_express_logo"
            android:contentDescription="@string/app_name"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
             android:gravity="center_vertical"
             android:background="@color/white"
             android:orientation="vertical"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/image_express_logo"
             android:layout_marginLeft="@dimen/margin"
            >
            <LinearLayout 
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_small"
            android:singleLine="true"
            android:text="@string/order_express_company"
             />
         <TextView
            android:id="@+id/text_express_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_small"
             />
         </LinearLayout>
         
         <LinearLayout 
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_small"
            android:singleLine="true"
            android:text="@string/express_no"
             />
         <TextView
            android:id="@+id/text_express_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_small"
             />
         </LinearLayout>
         </LinearLayout>
</RelativeLayout>

    <ListView
        android:id="@+id/lv_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:cacheColorHint="@color/transparency"
        android:divider="@color/linecolor"
        android:dividerHeight="0px"
        android:listSelector="@color/transparency"
        android:scrollbars="none" 
        android:layout_marginTop="@dimen/margin"
        android:paddingTop="@dimen/margin"
        android:visibility="visible"
        >
    </ListView>

    <TextView 
         android:id="@+id/text_express_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_tutor"
            android:textSize="@dimen/text_size_bigger"
            android:gravity="center"
             android:layout_gravity="center"
             android:visibility="gone"
        />
    
</LinearLayout>