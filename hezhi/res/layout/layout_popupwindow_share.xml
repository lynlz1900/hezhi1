<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_transparency_black"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <include layout="@layout/view_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/share_wechat_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:background="@drawable/icon_social_wechat"
                android:gravity="center_horizontal"
                android:textColor="@color/text_tutor2"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/share_wechatcircle_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:background="@drawable/icon_social_wechatcircle"
                android:gravity="center_horizontal"
                android:textColor="@color/text_tutor2"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/share_qq_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:background="@drawable/icon_social_qq"
                android:gravity="center_horizontal"
                android:textColor="@color/text_tutor2"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/share_qzone_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:background="@drawable/icon_social_qzone"
                android:gravity="center_horizontal"
                android:textColor="@color/text_tutor2"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <include layout="@layout/view_line_horizontal" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:background="@drawable/selector_whitetogray_nocorner"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_main" />
    </LinearLayout>

</RelativeLayout>