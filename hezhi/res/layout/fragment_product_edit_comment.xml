<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/title_bar"
    android:orientation="vertical" >

    <include layout="@layout/view_line_horizontal" />

    <LinearLayout
        android:id="@+id/edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin" >

        <EditText
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:background="@drawable/selector_edittext2"
            android:hint="写评论"
            android:maxLength="100"
            android:paddingLeft="@dimen/margin"
            android:textCursorDrawable="@drawable/shape_editext_cursor"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/send_bt"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_btn_submit"
            android:gravity="center"
            android:text="发送"
             android:enabled="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/praise_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_pic_praise"
            android:button="@null" />

        <TextView
            android:id="@+id/praise_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_tutor"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_share" />
    </LinearLayout>

</LinearLayout>