<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" 
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_whitetogray_nocorner" 
        android:paddingLeft="@dimen/margin"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        >

        <ImageView 
            android:id="@+id/image_default"
            android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/icon_checked_on"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:visibility="gone"
            />
        
       <LinearLayout 
           android:id="@+id/layout_body"
           android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_default"
        android:layout_toLeftOf="@+id/image_edit"
           >
           <LinearLayout 
               android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <TextView
            android:id="@+id/text_user_name"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_bigger" 
            android:ellipsize="end"
            android:maxLines="1"
            />
            <TextView
            android:id="@+id/text_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_bigger"
            android:layout_marginLeft="28dp"
            android:maxLength="11"
             />
            
            <TextView 
            android:id="@+id/text_default"
            android:layout_width="40dp"
        android:layout_height="18dp"
         android:background="@drawable/selector_btn_submit_line"
         android:text="@string/address_default"
         android:textColor="@drawable/selector_text_font_basetowhite"
         android:textSize="@dimen/text_size_small"
          android:gravity="center"
          android:layout_marginLeft="@dimen/margin"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:onClick="false"
          android:enabled="false"
            />
            
		</LinearLayout>
        <TextView
            android:id="@+id/text_user_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_tutor"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginTop="@dimen/margin"
             />
       </LinearLayout>
       
       <LinearLayout 
            android:id="@+id/image_edit"
           android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin"
        >
 <ImageView 
            android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/icon_edit"
        android:contentDescription="@string/app_name"
            />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>