<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/customization_ll"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_gray"
               android:baselineAligned="false" >

    <LinearLayout
            android:id="@+id/customization_ly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
             android:background="@color/bg_gray"
             >

            <RelativeLayout
                android:id="@+id/customization_ry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_submit_line3"
                android:padding="0px">

                <com.wukong.hezhi.ui.view.RatioLayout
                    android:id="@+id/customization_image_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:picRatio="1.00">

                    <ImageView
                        android:id="@+id/customization_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_custom"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_loading"/>
                </com.wukong.hezhi.ui.view.RatioLayout>

                <ImageView
                    android:id="@+id/customization_delete"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignBottom="@+id/customization_image_rl"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin1"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_delete_red"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customization_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_normal"/>

                <TextView
                    android:id="@+id/customization_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin4"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_size_bigger"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/margin"
                android:paddingTop="8dp"
                >

                <ImageView
                    android:id="@+id/image_custom_type"
                    android:layout_width="46dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:contentDescription="@string/app_name"
                    />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>