<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:id="@+id/content"
                android:gravity="center"
                android:orientation="vertical"
    >

    <com.wukong.hezhi.function.imagepicker.view.ViewPagerFixed
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        >

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar"
            android:layout_centerInParent="true"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="12"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_bigger"/>

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/icon_back"
            android:gravity="center"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:textColor="@color/text_normal"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingTop="16dp"
        >

        <com.wukong.hezhi.ui.view.RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            app:starClick="false"
            app:starCount="5"
            app:starDistance="8dp"
            app:starEmpty="@drawable/ic_star_border"
            app:starFill="@drawable/ic_star_border_on"
            app:starInt="true"
            app:starSize="12dp"
            />

        <TextView
            android:id="@+id/text_appraise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
			android:layout_marginTop="14dp"
			android:layout_gravity="left|top"
			android:gravity="left|top"
			android:scrollbars="vertical"
			android:scrollbarStyle="insideOverlay"
			android:fadeScrollbars="false"
    		android:scrollbarFadeDuration="1000"
    		android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@color/base"
            />
    </LinearLayout>
</RelativeLayout>