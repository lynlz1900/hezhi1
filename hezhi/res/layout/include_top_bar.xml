<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/selector_viewpager_instruct"
    android:clickable="true">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_whitetogray_nocorner"
        android:padding="14dp"
        android:src="@drawable/icon_back"/>


    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:text="选择图片"
        android:layout_centerInParent="true"
        android:textColor="@color/text_main"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:minHeight="20dp"
        android:minWidth="40dp"
        android:background="@drawable/selector_top_ok"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="完成(3/9)"
        android:textColor="@color/white"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="14dp"
        android:src="@drawable/ic_del"
        android:visibility="gone"/>
</RelativeLayout>