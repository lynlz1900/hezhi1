<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants"
    >
    <ScrollView 
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@color/bg_gray"
    android:scrollbars="none">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:orientation="vertical" >
      <RelativeLayout 
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:background="@color/white"
          >
          <ImageView 
              android:id="@+id/image_user"
              android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_alignParentLeft="true"
    android:contentDescription="@string/app_name"
    android:layout_centerVertical="true"
    android:scaleType="centerCrop"
              />
          <LinearLayout 
               android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/text_time"
    android:layout_toRightOf="@+id/image_user"
    android:gravity="left|center_vertical"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_marginLeft="8dp"
    >
               <TextView 
              android:id="@+id/text_user"
              android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#7aa2cc"
    android:textSize="@dimen/text_size_small"
              />
               <com.wukong.hezhi.ui.view.RatingBar 
                   android:id="@+id/ratingBar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                  app:starEmpty="@drawable/ic_star_border"
			        app:starFill="@drawable/ic_star_border_on"
			        app:starDistance="4dp"
			        app:starCount="5"
			        app:starSize="12dp"
			         app:starInt="true"
			        app:starClick="false"
                  />
          </LinearLayout>
          <TextView 
              android:id="@+id/text_time"
              android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/text_tutor"
    android:textSize="@dimen/text_size_small"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
              />
      </RelativeLayout>
      <TextView 
              android:id="@+id/text_appraise"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/text_main"
    android:textSize="@dimen/text_size_normal"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingBottom="16dp"
     android:background="@color/white"
     android:lineSpacingExtra="7dp"
              />
      
      <LinearLayout 
          android:id="@+id/layout_gv_images"
          android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingBottom="16dp"
                 android:background="@color/white"
                >
       <com.wukong.hezhi.ui.view.GridViewForListview
                android:id="@+id/gv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="8dp"
                android:listSelector="@null"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" 
                />
          </LinearLayout>
          
       <LinearLayout 
           android:id="@+id/layout_appraise_response"
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
           android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingBottom="16dp">
      <TextView 
              android:id="@+id/text_appraise_response"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/text_main"
    android:textSize="@dimen/text_size_normal"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg_appraise_response"
    android:lineSpacingExtra="7dp"
              />
      </LinearLayout>
      
      <LinearLayout 
          android:id="@+id/layout_add"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@color/white"
     android:orientation="vertical"
     android:paddingBottom="16dp"
          >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@color/linecolor" />
           <TextView 
              android:id="@+id/text_add"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/base"
    android:textSize="@dimen/text_size_normal"
    android:paddingLeft="@dimen/margin"
     android:paddingRight="@dimen/margin"
     android:paddingTop="16dp"
     android:background="@color/white"
              />
        <TextView 
              android:id="@+id/text_appraise_add"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/text_main"
    android:textSize="@dimen/text_size_normal"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingTop="16dp"
     android:background="@color/white"
     android:lineSpacingExtra="7dp"
              />
      </LinearLayout>
        <LinearLayout 
          android:id="@+id/layout_gv_imagesadd"
          android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingBottom="16dp"
                 android:background="@color/white"
                >
       <com.wukong.hezhi.ui.view.GridViewForListview
                android:id="@+id/gv_imagesadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="8dp"
                android:listSelector="@null"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" 
                />
          </LinearLayout>
      <LinearLayout 
           android:id="@+id/layout_appraiseAdd_response"
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
           android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingBottom="16dp">
      <TextView 
              android:id="@+id/text_appraiseAdd_response"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/text_main"
    android:textSize="@dimen/text_size_normal"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg_appraise_response"
    android:lineSpacingExtra="7dp"
              />
      </LinearLayout>
      </LinearLayout>
      </ScrollView>
</LinearLayout>