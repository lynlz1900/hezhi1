<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:orientation="vertical" 
    >

    <ScrollView 
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:scrollbars="none"
        >
        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:orientation="vertical" 
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
      <RelativeLayout 
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:background="@color/white"
          >
          <ImageView 
              android:id="@+id/image_commodity"
              android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_alignParentLeft="true"
    android:contentDescription="@string/app_name"
    android:layout_centerVertical="true"
     android:scaleType="centerInside" 
        android:background="@drawable/bg_custom"
              />
          <LinearLayout 
               android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/image_commodity"
    android:gravity="left|center_vertical"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_marginLeft="16dp"
    >
               <TextView 
              android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/text_main"
    android:textSize="@dimen/text_size_normal"
    android:text="@string/appraise_score"
              />
               <com.wukong.hezhi.ui.view.RatingBar 
                   android:id="@+id/ratingBar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                   app:starEmpty="@drawable/ic_star_border"
			        app:starFill="@drawable/ic_star_border_on"
			        app:starDistance="8dp"
			        app:starCount="5"
			        app:starSize="22dp"
			        app:starInt="true"
			        app:starClick="true"
                  />
          </LinearLayout>
      </RelativeLayout>
      
     <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_line_height"
            android:background="@color/linecolor" />
      
      <LinearLayout 
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
      <EditText
            android:id="@+id/input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textCursorDrawable="@drawable/shape_editext_cursor"
            android:gravity="left"
            android:hint="@string/appraise_content_input"
            android:textColorHint="@color/text_tutor"
             android:textSize="@dimen/text_size_normal"
            android:maxLength="500"
            android:minHeight="109dp"
            android:paddingTop="@dimen/margin"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:singleLine="false"
             android:lineSpacingExtra="7dp"
             >
        </EditText>
            <TextView
            android:id="@+id/word_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="right"
            android:paddingRight="@dimen/margin"
            android:textColor="@color/text_tutor"
            android:textSize="@dimen/text_size_small" 
            />
        </LinearLayout>
        
      <LinearLayout 
          android:id="@+id/layout_gv_images"
          android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                 android:paddingBottom="@dimen/margin"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/margin"
                >
       <com.wukong.hezhi.ui.view.GridViewForListview
                android:id="@+id/gv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="8dp"
                android:listSelector="@null"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" 
                />
          </LinearLayout>
          </LinearLayout>
          </ScrollView>
</LinearLayout>